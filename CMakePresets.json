{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/out/${presetName}"
    },
    {
      "name": "debug-base",
      "hidden": true,
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release-base",
      "hidden": true,
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows-base",
      "hidden": true,
      "inherits": "base",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "generator": "Ninja"
    },
    {
      "name": "linux-base",
      "hidden": true,
      "inherits": "base",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "generator": "Unix Makefiles"
    },
    {
      "name": "windows-debug",
      "hidden": false,
      "inherits": [ "windows-base", "debug-base" ],
      "displayName": "Windows Debug",
      "description": "Windows Visual Studio debug preset"
    },
    {
      "name": "windows-release",
      "hidden": false,
      "inherits": [ "windows-base", "release-base" ],
      "displayName": "Windows Release",
      "description": "Windows Visual Studio release preset"
    },
    {
      "name": "linux-debug",
      "hidden": false,
      "inherits": [ "linux-base", "debug-base" ],
      "displayName": "Linux Debug",
      "description": "Linux Makefile debug preset"
    },
    {
      "name": "linux-release",
      "hidden": false,
      "inherits": [ "linux-base", "release-base" ],
      "displayName": "Linux Release",
      "description": "Linux Makefile release preset"
    }
  ]
}
